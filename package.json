{
  "name": "@hafez/x-cli",
  "version": "1.1.0",
  "description": "CLI tool for viewing X (Twitter) posts and replies",
  "type": "module",
  "bin": {
    "x": "./dist/cli.js"
  },
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "postbuild": "chmod +x dist/cli.js",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "x",
    "twitter",
    "cli",
    "tweet",
    "social-media"
  ],
  "author": "Hafez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AbdelrahmanHafez/x-cli.git"
  },
  "bugs": {
    "url": "https://github.com/AbdelrahmanHafez/x-cli/issues"
  },
  "homepage": "https://github.com/AbdelrahmanHafez/x-cli#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "x-client-transaction-id": "^0.1.9",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
